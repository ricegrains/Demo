/**index.wxss**/
.content{
  background-color: #f2f2f2;
}

.indexlogo{
  width: 100%;
	height: 130px;
}

.searchSection{
  height: 50px;
  align-items: center;
  padding-top:10px;
}

.searchButton{
  width: 230px;
  height: 40px;
  align-items: center;
}

.searchText{
	font-size: 13px;
}

.paperSection{
  display: flex;
  align-items: center;
  padding-left: 20px;
  padding-right: 20px;
  
}
.paper{
  width: 100%;
  background-color: white;
}

.tileText{
  height: 30px;
  font-size: 15px;
  font-weight:normal;
}

.pagebutton{ 
  height: 100px;
  background-color: white;
  text-align: left;
}
.pagebutton::after{
  border-bottom: 6px solid #f2f2f2;
  border-top-style: none;
  border-left-style: none;
  border-right-style: none;
}

.nameText{ 
  font-family: KaiTi;
  font-size: 15px;
  font-weight:bold;
  
}
.idText{
  font-size: 10px;
  font-weight:normal;
}
